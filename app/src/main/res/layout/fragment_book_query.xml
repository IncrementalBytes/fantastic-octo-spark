<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_book_query">

    <android.support.v7.widget.CardView
        android:id="@+id/query_card_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/default_view_margin"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent"
        card_view:layout_constraintBottom_toTopOf="@id/query_card_manual">

        <TextView
            android:id="@+id/query_text_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_view_margin"
            android:text="@string/search_by_image"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/book_query_image_image"
            android:layout_width="@dimen/image_width_thumbnail"
            android:layout_height="@dimen/image_height_thumbnail"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_view_margin"
            android:contentDescription="@string/search_by_image"
            card_view:srcCompat="@drawable/ic_camera_dark" />

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/query_card_manual"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="true"
        android:focusable="true"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="@dimen/default_view_margin"
        card_view:layout_constraintTop_toBottomOf="@id/query_card_image"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/query_text_manual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_view_margin"
            android:text="@string/search_manual"
            android:textAlignment="center"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/query_image_manual"
            android:layout_width="@dimen/image_width_thumbnail"
            android:layout_height="@dimen/image_height_thumbnail"
            android:layout_gravity="center"
            android:layout_margin="@dimen/default_view_margin"
            android:contentDescription="@string/search_manual"
            card_view:srcCompat="@drawable/ic_search_dark" />

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>