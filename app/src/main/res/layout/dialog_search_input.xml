<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:id="@+id/dialog_text_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/dialog_edit_search"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/search"
        android:hint="@string/placeholder"
        android:inputType="text"
        android:padding="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dialog_text_search" />

    <ImageView
        android:id="@+id/dialog_image_search"
        android:layout_width="@dimen/image_width_thumbnail"
        android:layout_height="@dimen/image_height_thumbnail"
        android:layout_margin="@dimen/default_view_margin"
        app:srcCompat="@drawable/ic_search_dark"
        app:layout_constraintTop_toBottomOf="@id/dialog_edit_search"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>